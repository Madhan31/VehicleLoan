<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM 
          "hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost/vehicle_loan?useSSL=false</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">viki</property>
    <property name="show_sql">true</property>                   
       <mapping class="model.Address" />   
       <mapping class="model.EligibilityDetail" />   
       <mapping class="model.Loan" />   
       <mapping class="model.LoanDetail" />   
       <mapping class="model.Payment" />   
       <mapping class="model.Role" />   
       <mapping class="model.User" /> 
       <mapping class="model.Vehicle" />   
       <mapping class="model.VehicleModel" />   
       
         
       
         </session-factory>
</hibernate-configuration>
